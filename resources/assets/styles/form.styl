@import 'extra/form';

a.btn.btn-add {
    background: transparent;
    box-shadow: 2px 2px 4px 0px rgba(0, 0, 0, .13);
    border-radius: 100%;
    font-size: 1em;

    margin 30px

    transition .15s all ease-in-out

    &:hover {
        transform: scale(1.3);
        box-shadow: 0px 5px 4px 0px rgba(0, 0, 0, .13);
    }
}


textarea {
    min-height 200px
}
