$theme = #ff4374;
$black = #292944;

body {
  text-align: center;
  padding: 150px;
  font: 20px Helvetica, sans-serif;
  color: $black;
}

h1 {
  font-size: 50px;
}


article {
  display: block;
  text-align: left;
  width: 650px;
  margin: 0 auto;
}

a {
  color: $theme;
  text-decoration: none;
  transition: color .15s ease-in-out;

  &:hover {
    color: darken($theme, 35%);
    text-decoration: none;
  }
}

*::selection {
  color: #f5f5f5;
  background: $theme;
}


.sign {
  font-style italic
  opacity:.5
}

footer {

}

.social {
  color: #292944;
  margin:0 auto;
  background: transparent;
  font-size 1rem;
  position absolute
  bottom: 10px
  text-align center
  left: 0
  width: 100vw
  transform: scale(1);

  .fa {
    display: inline-block
    margin:10px
    color: $black
    cursor: pointer;
    transition: transform .15s ease-in-out, color .15s ease-in-out;

    &:hover {
      transform: scale(.95);
      color: lighten($black, 50%)
    }
  }
}