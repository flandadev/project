// EVENT
.event {
    &:not(.pattern) {
        background-size: cover
        background-repeat: no-repeat
    }

    img {
        // width: 100%
        // margin: 0px auto 20px auto

        display block
        position: relative;
        width: 100%;
        min-width: 200px;
        max-width: 550px;
        margin: 0 auto;
        padding-top: 20px;
    }

    .event--descr {
        /*
            position: relative
            background whitesmoke
            width: 80%
            font-size: 1em
            font-weight: normal
            text-align: justify
            padding 15px
            margin: 20px auto
        */

        min-width: 200px;
        max-width: 550px;
        margin: 0 auto;
        padding: 20px;
        text-align: justify;
        text-transform: uppercase;
        color: #2b2b2b;
        background: white;
        font-family: 'Helvetica', sans-serif;
        font-size: .8em;
        font-weight: bold;
        font-style: italic;
        line-height: 20px;
    }

    .event--title {
        text-align: center
        width: 100%
        height: auto
        color: #fff
        text-transform: uppercase
        padding: 25px

        @media screen and (max-width: 500px) {
            font-size 2.5em
        }
    }

    .event--container {
        max-width 60vw
        position: relative
        display block
        margin 0 auto

        @media screen and (max-width: 800px) {
            max-width: 100vw
        }

    }

    .event--info {
        width: 100%;
        max-width: 595px;
        height: 100%;
        margin: 0 auto;
        background: transparent;
    }

    .buy-btn {
        position: relative;
        padding: 14px 30px;
        -webkit-transition: all .25s ease;
        transition: all .25s ease;
        color: #050506;
        border: 1.3px solid #eee;
        outline: none;
        display: block;
        background: #eee;
        font-size: 1.2em;
        font-weight: bold;
        line-height: 40px;
        max-width: 40%;
        min-width: 30%;
    }


    .event--button {
        width 100%
        height auto
        margin 0 auto
        display block
        position: relative

        * {
            display inline-block
            margin 0 2.5px
            cursor pointer
        }

        &.main-page {
            text-align center
        }

        a {
            position: relative
            margin 0 auto
        }

        &.fixed {
            position: fixed
            bottom: 0px;
            left: 0px;
            padding: 25px;

            *:not(.back) {
                float: right
            }

            .back {
                float left
            }
        }
    }
}
