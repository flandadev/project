@import 'extra/variables';
@import 'extra/dom';
@import 'extra/form';
@import 'extra/flanda';
@import 'extra/menu';
@import 'extra/containers';
@import 'extra/scroll';

* {
	-webkit-appearance:none;
}


.maintence-button {
	position: fixed;
	right: 25px;
	bottom: 25px;
	-webkit-border-radius: 50%;
	-moz-border-radius: 50%;
	border-radius: 50%;
	width: 50px;
	height: 50px;
	border: none !important;
	cursor: pointer;
	background: #ff0080;
	color: #880080;
	box-shadow: 2px 3px 5px rgba(0, 0, 0, .2);
	cursor: pointer !important;
	z-index: 9999999;
}

.new-button {
	position: fixed;
	left: 25px;
	bottom: 25px;
	-webkit-border-radius: 50%;
	-moz-border-radius: 50%;
	border-radius: 50%;
	width: 50px;
	height: 50px;
	border: none !important;
	cursor: pointer;

	background: #00ff80;
	color: #008880;
	box-shadow: 2px 3px 5px rgba(0, 0, 0, .2);
	cursor: pointer !important;
	z-index: 9999999;
}

.flex-grid {
	display: flex;
}

.col {
	flex: 1;
}

.col .btn {
	text-align: center;
}

.flex-grid-thirds {
	display: flex;
	justify-content: space-between;
}
.flex-grid-thirds .col {
	width: 32%;
}

@media (max-width: 400px) {
	.flex-grid {
		display: block;
	}
}