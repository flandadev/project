// MAIN WRAPPERS
html,
body {
    width: 100%
    height: 100%

    font-size: font.size
    font-family: ffamily
}

// HEADERS
h1, h2,
h3, h4,
h5, h6 {
    font-weight: bolder
    font-family: ffamily

    &.coursive {
        font-style: italic
    }
}

h1 {
    font-size: 4.5em

    &.power_up {
        font-size: 7em
    }
}

h2 {
    font-size: 4em

    &.power_up {
        font-size: 6.5em
    }
}

h3 {
    font-size: 3.5em

    &.power_up {
        font-size: 5.5em
    }
}

h4 {
    font-size: 3em

    &.power_up {
        font-size: 5em
    }
}

h5 {
    font-size: 2.3em

    &.power_up {
        font-size: 4.3em
    }
}

h6 {
    font-size: 1.5em

    &.power_up {
        font-size: 3.5em
    }
}



// LINKS
a {
    font-size: 1em
    font-weight: normal
    text-decoration: none
    color: $main
    cursor: pointer

    &.underline {
        padding-bottom: 3px
        position: relative

        &:hover::before,
        &.active::before {
            transform: scaleX(1)
        }


        &::before {
            width: 100%
            height: 2px
            content: ''
            display: block
            left: 0

            transform: scaleX(0)
            transition: transform .15s ease-in-out

            background: $main

            position: absolute

            bottom: 0
        }
    }
}

footer {
    position: relative
    display: block
    width: 100%
    height: auto
    padding: 25px
    max-height: 25vh
    max-width: 100vw
}
