.section {
    max-width: 100vw

    height: 100%
    width: 100%

    position: relative
    display: block
    padding: 25px

    &.no-pad {
        padding: 0
    }
    &.fp {
        min-height: 100vh
    }


    * {
        box-sizing: border-box
    }
}


.center-container {
    display: flex
    justify-content: center
    align-items: center
}

.abs-center {
    position: absolute
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
}
